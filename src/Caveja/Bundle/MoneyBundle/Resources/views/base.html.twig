{% extends '::base.html.twig' %}

{% block html_tag %}
<html ng-app="moneyApp">
{% endblock html_tag %}

{% block head_script %}
    {{ parent() }}
    <script type="text/javascript">
        var siteRoot = '{{ path('caveja_desk_homepage') }}';
    </script>
    <script type="text/javascript" src="{{ asset('bundles/cavejamoney/js/services.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/cavejamoney/js/controllers.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/cavejamoney/js/app.js') }}"></script>
{% endblock head_script %}

{% block head_style %}
    {{ parent() }}
    {% stylesheets
    '@CavejaMoneyBundle/Resources/public/less/screen.less'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock head_style %}

{% block content_sidebar %}
    <h2>Accounts</h2>
    <div ng-controller="AccountListCtrl" class="sidebar-box">
        <ul>
            <li ng-repeat="account in accounts">
                {% verbatim %}
                    {{ account.name }}
                {% endverbatim %}
            </li>
        </ul>
    </div>
{% endblock content_sidebar %}
